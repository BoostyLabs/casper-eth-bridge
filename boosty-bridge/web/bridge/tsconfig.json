{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
            "@static/*": [
                "./src/app/static/*"
            ],
            "@app/*": [
                "./src/app/*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "vite.config.ts",
    "jest.config.js"
  ],
  "exclude": [
    "./src/tests/**",
    "./src/mocks/**",
    "./src/test-utils"
  ]
}
